{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["airbnb", "prettier", "prettier/react"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "plugins": ["react", "prettier"],
    "settings": {
        "import/resolver": {
          "alias": ["src", "./src"]
        }
    },
    "rules": {
        "react/jsx-filename-extension": [
          1,
          {
            "extensions": [".js", "jsx"]
          }
        ],
        "prettier/prettier": "error",
        "max-len": ["error", 100],
        "global-require": 0
    }
}